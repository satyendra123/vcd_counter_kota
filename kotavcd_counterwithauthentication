#step-10 vcd_counter/models.py
  from django.db import models

class VcdCounter(models.Model):
    total_vacancy = models.IntegerField()
    available_vacancy = models.IntegerField()
    entry_count = models.IntegerField()
    exit_count = models.IntegerField()
    datetime = models.DateTimeField()

    def __str__(self):
        return f"{self.datetime} - Total: {self.total_vacancy}, Available: {self.available_vacancy}, Entry: {self.entry_count}, Exit: {self.exit_count}"
