#step-8 vcd_counter/views.py
from datetime import datetime, timedelta
from rest_framework.views import APIView
from rest_framework.response import Response
from rest_framework import status
from django.db.models import Sum
from .models import VcdCounter
from rest_framework.permissions import AllowAny
from .serializers import VcdCounterSerializer
from django.utils.timezone import make_aware
class LatestVcdData(APIView):
    permission_classes = [AllowAny]

    def get(self, request):
        try:
            latest_data = VcdCounter.objects.latest('datetime')
            data = {
                'Total_Vacancy': latest_data.total_vacancy,
                'Available_Vacancy': latest_data.available_vacancy,
                'Entry_Count': latest_data.entry_count,
                'Exit_Count': latest_data.exit_count,
                'Datetime': latest_data.datetime.strftime('%Y-%m-%d %H:%M:%S')
            }
            return Response({'data': data}, status=status.HTTP_200_OK)
        except VcdCounter.DoesNotExist:
            return Response({'error': 'No data found'}, status=status.HTTP_404_NOT_FOUND)
        except Exception as e:
            return Response({'error': str(e)}, status=status.HTTP_500_INTERNAL_SERVER_ERROR)

    def post(self, request):
        return self.get(request)  # POST request will return the same response as a GET request


class VcdReport(APIView):
    permission_classes = [AllowAny]

    def post(self, request):
        try:
            from_date_str = request.data.get('from_date')
            to_date_str = request.data.get('to_date')
            car_type = request.data.get('car_type')

            # Debug prints
            print("Request data:", request.data)
            print("from_date_str:", from_date_str)
            print("to_date_str:", to_date_str)
            print("car_type:", car_type)

            if not from_date_str or not to_date_str or not car_type:
                return Response({'error': 'Missing parameters'}, status=status.HTTP_400_BAD_REQUEST)

            # Convert date strings to datetime objects
            from_date = make_aware(datetime.strptime(from_date_str, '%Y-%m-%d'))
            to_date = make_aware(datetime.strptime(to_date_str, '%Y-%m-%d') + timedelta(days=1) - timedelta(seconds=1))

            if car_type.lower() == 'entry':
                records = VcdCounter.objects.filter(datetime__range=[from_date, to_date], entry_count__gt=0)
            elif car_type.lower() == 'exit':
                records = VcdCounter.objects.filter(datetime__range=[from_date, to_date], exit_count__gt=0)
            else:
                return Response({'error': 'Invalid car type'}, status=status.HTTP_400_BAD_REQUEST)

            serializer = VcdCounterSerializer(records, many=True)

            # Get the last record within the date range
            last_record = VcdCounter.objects.filter(datetime__range=[from_date, to_date]).order_by('-datetime').first()
            total_entry = last_record.entry_count if last_record else 0
            total_exit = last_record.exit_count if last_record else 0

            response_data = {
                'records': serializer.data,
                'total_entry': total_entry,
                'total_exit': total_exit,
            }

            return Response(response_data, status=status.HTTP_200_OK)
        except Exception as e:
            return Response({'error': str(e)}, status=status.HTTP_500_INTERNAL_SERVER_ERROR)

